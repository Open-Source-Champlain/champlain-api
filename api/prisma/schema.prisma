// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Announcement {
  id          Int                @id @default(autoincrement())
  title       String             @default("Champlain College Announcement") @db.VarChar(256)
  description String             @default("")
  type        AnnouncementType[] @default([WEB])
  style       AnnouncementStyle  @default(INFO)
}

enum AnnouncementStyle {
  EMERGENCY
  INFO
}

enum AnnouncementType {
  WEB
  SHUTTLE
  MOBILE
}

model Semester {
  id      String   @id @unique
  name    String   @unique
  classes Course[]
}

// Each course has semester identified by the `semesterID` property.
model Course {
  id          String          @id @unique
  description String          @default("")
  sections    CourseSection[]
  Semester    Semester        @relation(fields: [semesterID], references: [id])
  semesterID  String          @map("semester_id")
}

model CourseSection {
  sectionID String   @id @unique
  class     Course   @relation(fields: [courseID], references: [id])
  courseID  String
  professor Faculty  @relation(fields: [facultyID], references: [id])
  days      String[]
  time      String[]
  facultyID Int
}

model Faculty {
  firstName     String          @map("first_name")
  lastName      String          @map("last_name")
  id            Int             @id @unique
  CourseSection CourseSection[]
}

model Shuttle {
  id        Int      @id @default(autoincrement())
  updated   DateTime @updatedAt
  lat       Int
  lon       Int
  mph       Int
  direction Int
}
